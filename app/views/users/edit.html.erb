
<h1><%= "#{t('user.title')} #{t('edit')}" %></h1>

<%= form_for( :user, url: { action: "update", id: params[:id] } ) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%# 表示名 %>
  <div class="field">
    <%= f.label :display_name, t("user.display_name") %><br />
    <%= f.text_field :last_name, size: 15 %><%= f.text_field :first_name, size: 15 %>
  </div>
  
  <%# 登録／更新ボタン %>
  <div class="actions">
    <%= f.submit t("update"), disable_with: t("update") %>
  </div>
<% end %>

