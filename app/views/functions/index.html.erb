<h1><%= t("function.list") %></h1>

<table>
  <tr>
    <th><%= t("function.level") %></th>
    <th><%= t("function.name") %></th>
    <!--<th></th>-->
    <% if @functions.length > 0 %>
    <th></th>
    <th></th>
    <% end %>
  </tr>

<% @functions.each do |function| %>
  <tr>
    <td><%= function.level %></td>
    <td><%= function.name %></td>
    <% if false %><td><%= link_to 'Show', function %></td><% end %>
    <td><%= link_to t("edit"), action: "edit", id: function.id, to_action: "update" %></td>
    <td><%= link_to t("delete"), { action: "destroy", id: function.id }, onClick: "return confirm('「#{function.name}」を削除します。よろしいですか？');" %></td>
  </tr>
<% end %>
</table>

