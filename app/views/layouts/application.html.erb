<!DOCTYPE html>
<html>
<head>
  <title>TestList : <%= session[:project_name] %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% unless session[:user_id].blank? %>
    <%= link_to t("testcase.title"), { controller: 'testcases' } %>
     | <%= link_to t("function.title"), { controller: 'functions' } %>
     || <%= link_to t("logout"), { controller: 'top', action: "logout" } %>
    <br />
  <% end %>
  
  <%# 通知／エラーメッセージ %>
  <% if !flash[:notice].blank? %>
    <p style="color: green;"><%=raw flash[:notice] %></p>
  <% elsif !flash[:alert].blank? %>
    <p style="color: red;"><%=raw flash[:alert] %></p>
  <% end %>
  
<%= yield %>

</body>
</html>
